{% extends 'base.html.twig' %}

{% block title %}Modifier le produit{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Modifier le produit</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
        <div class="mb-3">
            {{ form_label(form.nom, 'Nom du produit', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.prix, 'Prix (â‚¬)', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prix) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.image) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.taille, 'Tailles disponibles', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.taille, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.taille) }}
        </div>


        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Enregistrer
        </button>
        <a href="{{ path('admin_products_list') }}" class="btn btn-secondary">Annuler</a>
    {{ form_end(form) }}
</div>
{% endblock %}
