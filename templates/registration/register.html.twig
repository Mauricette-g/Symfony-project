{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5" style="max-width: 500px;">
    <h1 class="mb-4 text-center">Créer un compte</h1>

    {{ form_start(registrationForm) }}
        <div class="mb-3">
            {{ form_label(registrationForm.username, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.username) }}
        </div>
        <div class="mb-3">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="mb-3">
            {{ form_label(registrationForm.delivery_address, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.delivery_address, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.delivery_address) }}
        </div>
        <div class="mb-3">
            {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.plainPassword.first) }}
        </div>
        <div class="mb-3">
            {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.plainPassword.second) }}
        </div>
        <button type="submit" class="btn btn-primary w-100">S'inscrire</button>
    {{ form_end(registrationForm) }}

    <p class="mt-3 text-center">
        Déjà inscrit ? <a href="{{ path('app_login') }}">Connectez-vous ici</a>
    </p>
</div>
{% endblock %}

