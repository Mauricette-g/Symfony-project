{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<h1 class="m-2">Mon panier</h1>

{% for message in app.flashes('success') %}
  <div class="alert alert-success">{{ message }}</div>
{% endfor %}
{% for message in app.flashes('error') %}
  <div class="alert alert-danger">{{ message }}</div>
{% endfor %}

{% if panierItems is empty %}
    <p>Votre panier est vide.</p>
    <a class="btn btn-primary" href="{{ path('products_list') }}">Continuer mes achats</a>
{% else %}
    <table class="table">
        <thead>
        <tr>
            <th>Image</th><th>Produit</th><th>Taille</th><th>Prix</th><th>Quantité</th><th>Total</th><th></th>
        </tr>
        </thead>
        <tbody>
        {% for item in panierItems %}
            <tr>
                <td><img src="{{ asset('images/produits/' ~ item.image) }}" alt="{{ item.nom }}" style="width:80px"></td>
                <td>{{ item.nom }}</td>
                <td>{{ item.taille }}</td>
                <td>{{ item.prix }} €</td>
                <td>
                    <form method="post" action="{{ path('cart_update', {index: loop.index0}) }}">
                        <input type="number" name="quantite" value="{{ item.quantite|default(1) }}" min="1" style="width:70px">
                        <button class="btn btn-sm btn-secondary" type="submit">Mettre à jour</button>
                    </form>
                </td>
                <td>{{ (item.prix * item.quantite|default(1))|number_format(2, ',', ' ') }} €</td>
                <td>
                    <a class="btn btn-sm btn-danger" href="{{ path('cart_remove', {index: loop.index0}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h3>Total : {{ total|number_format(2, ',', ' ') }} €</h3>

    <form method="post" action="{{ path('cart_checkout') }}">
        <button class="btn btn-success">Payer avec Stripe</button>
    </form>
{% endif %}
{% endblock %}
