
{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Ajouter un produit</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.prix) }}
        {{ form_row(form.image) }}

        <button class="btn btn-primary" type="submit">Ajouter</button>
    {{ form_end(form) }}
</div>
{% endblock %}
